{
  "id": "https://gliechtenstein.github.io/jasonschema/component/html.json",
  "properties": {
    "type": {
      "enum": ["html"]
    },
    "text": {
      "type": "string",
      "pattern": "<html>.*<\/html>"
    },
    "style": {
      "type": "object",
      "properties": {
        "height": {
          "type": "string",
          "pattern": "[0-9]+"
        }
      },
      "required": ["height"]
    },
    "action": {
      "type": "object"
    }
  },
  "required": ["type", "text"]
}
