        },
        "url": {
          "type": "string",
          "pattern": "http:.*"
        },
        "action": {
          "$ref": "https://gliechtenstein.github.io/jasonschema/action/action.json"
        },
        "style": {
          "$ref": "https://gliechtenstein.github.io/jasonschema/style/style.json"
        }
      }]
    }
  }
