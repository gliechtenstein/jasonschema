        "top": {
          "type": "string",
          "pattern": "[0-9]+"
        },
        "left": {
          "type": "string",
          "pattern": "[0-9]+"
        },
        "bottom": {
          "type": "string",
          "pattern": "[0-9]+"
        },
        "right": {
          "type": "string",
          "pattern": "[0-9]+"
        },
        "width": {
          "type": "string",
          "pattern": "[0-9]+"
        },
        "height": {
          "type": "string",
          "pattern": "[0-9]+"
        },
        "corner_radius": {
          "type": "string",
          "pattern": "[0-9]+"
        },
        "color": {
          "type": "string",
